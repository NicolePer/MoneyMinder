<GridPane alignment="CENTER" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="at.nicoleperak.client.SignUpScreenFXMLController">
  <columnConstraints>
    <ColumnConstraints hgrow="SOMETIMES" percentWidth="65.0" />
    <ColumnConstraints hgrow="SOMETIMES" percentWidth="35.0" />
  </columnConstraints>
  <rowConstraints>
    <RowConstraints />
      <RowConstraints percentHeight="0.0" vgrow="SOMETIMES" />
  </rowConstraints>
   <children>
      <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" GridPane.columnIndex="1">
         <children>
            <ImageView fitHeight="116.0" fitWidth="163.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@logo-no-background.png" />
               </image>
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
            </ImageView>
         </children>
      </VBox>
      <VBox alignment="CENTER" spacing="5.0" style="-fx-background-color: #158a97;" GridPane.halignment="CENTER" GridPane.hgrow="ALWAYS" GridPane.valignment="CENTER" GridPane.vgrow="ALWAYS">
         <children>
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
               <children>
                  <VBox fillWidth="false" spacing="20.0">
                     <children>
                        <Label text="SIGN UP" textFill="WHITE" textOverrun="CLIP">
                           <font>
                              <Font name="Source Sans Pro SemiBold" size="26.0" />
                           </font>
                        </Label>
                        <TextField fx:id="usernameField" layoutX="10.0" layoutY="65.0" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="28.0" prefWidth="270.0" promptText="username">
                           <font>
                              <Font name="Source Sans 3 Regular" size="13.0" />
                           </font>
                        </TextField>
                        <TextField fx:id="emailField" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="28.0" prefWidth="270.0" promptText="email">
                           <font>
                              <Font name="Source Sans 3 Regular" size="13.0" />
                           </font>
                        </TextField>
                        <PasswordField fx:id="passwordField" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="28.0" prefWidth="270.0" promptText="password">
                           <font>
                              <Font name="Source Sans 3 Regular" size="13.0" />
                           </font>
                        </PasswordField>
                        <PasswordField fx:id="retypePasswordField" layoutX="10.0" layoutY="113.0" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" onKeyTyped="#showWarningIfPasswordsDiffer" prefHeight="28.0" prefWidth="270.0" promptText="retype password">
                           <font>
                              <Font name="Source Sans 3 Regular" size="13.0" />
                           </font>
                        </PasswordField>
                     </children>
                  </VBox>
               </children>
            </HBox>
            <VBox alignment="CENTER">
               <children>
                  <Label fx:id="warningLabel" alignment="CENTER" textFill="WHITE">
                     <font>
                        <Font name="Source Sans 3 Regular" size="13.0" />
                     </font>
                     <opaqueInsets>
                        <Insets />
                     </opaqueInsets>
                     <VBox.margin>
                        <Insets />
                     </VBox.margin>
                  </Label>
               </children>
            </VBox>
            <VBox spacing="5.0">
               <children>
                  <HBox alignment="CENTER">
                     <children>
                        <Button fx:id="signUpButton" alignment="CENTER" cache="true" mnemonicParsing="false" onAction="#registerUser" prefHeight="26.0" prefWidth="121.0" style="-fx-background-color: #FFFFFF;" text="Sign Up" textAlignment="JUSTIFY">
                           <font>
                              <Font name="Source Sans 3 Regular" size="13.0" />
                           </font>
                           <opaqueInsets>
                              <Insets bottom="1.0" left="1.0" right="1.0" top="1.0" />
                           </opaqueInsets>
                           <cursor>
                              <Cursor fx:constant="HAND" />
                           </cursor>
                        </Button>
                     </children>
                  </HBox>
               </children>
            </VBox>
         </children>
      </VBox>
      <AnchorPane fx:id="goBackButton" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" onMouseClicked="#onGoBackButtonClicked" prefHeight="37.0" prefWidth="37.0" GridPane.halignment="LEFT" GridPane.valignment="TOP">
         <children>
            <ImageView fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true" AnchorPane.leftAnchor="5.0" AnchorPane.topAnchor="7.0">
               <image>
                  <Image url="@arrow-left.png" />
               </image>
            </ImageView>
         </children>
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
         <GridPane.margin>
            <Insets />
         </GridPane.margin>
      </AnchorPane>
   </children>
</GridPane>
